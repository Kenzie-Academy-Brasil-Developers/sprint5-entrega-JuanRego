{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
